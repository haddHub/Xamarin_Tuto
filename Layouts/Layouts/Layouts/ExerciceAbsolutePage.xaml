<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Layouts.ExerciceAbsolutePage">
    <AbsoluteLayout>
        <BoxView Color="Silver" AbsoluteLayout.LayoutBounds="0,0,1,0.33" AbsoluteLayout.LayoutFlags="All" />
        <StackLayout AbsoluteLayout.LayoutBounds="0,0,1,0.33" AbsoluteLayout.LayoutFlags="SizeProportional" VerticalOptions="Center">
            <Label Text="$11.95" TextColor="#33353a" FontSize="15" FontAttributes="Bold" HorizontalOptions="Center" AbsoluteLayout.LayoutBounds="0.5,0.5" AbsoluteLayout.LayoutFlags="PositionProportional" />
            <Button Text="Add $7.99 Credit" HorizontalOptions="Center" BackgroundColor="#1695A3" BorderRadius="15"  HeightRequest="30" FontSize="7" FontAttributes="Bold"/>
        </StackLayout>
        <StackLayout Padding="40, 0" Spacing="20"
				AbsoluteLayout.LayoutBounds="0, 0.5, 1, 0.3" AbsoluteLayout.LayoutFlags="All">
            <Label Text="Why pay for credit?" HorizontalOptions="Center" FontAttributes="Bold" FontSize="15" />
            <Label HorizontalOptions="Center" HorizontalTextAlignment="Center" FontSize="13">
                Because you can reach people who aren't on
SkyApp by calling mobile and landline
numbers, or spending SMS, at low-cost rates.
            </Label>
        </StackLayout>
    </AbsoluteLayout>
</ContentPage>